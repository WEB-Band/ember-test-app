<div class="custom-control custom-radio custom-control-inline">
    <input type="radio" id="customRadioInline1" name="customRadioInline1" class="custom-control-input" value="show" onChange={{action "setChanged"}}>
    <label class="custom-control-label" for="customRadioInline1">Show sidebar</label>
</div>
<div class="custom-control custom-radio custom-control-inline">
    <input type="radio" id="customRadioInline2" name="customRadioInline1" class="custom-control-input" value="hide" onChange={{action "setChanged"}}>
    <label class="custom-control-label" for="customRadioInline2">Hide sidebar</label>
</div>

<div class="custom-control-inline">
    {{#link-to 'contact' (query-params sidebar=sidebar) type="button" tagName="button" class="btn btn-primary"}}Go to contact{{/link-to}}             
</div>
